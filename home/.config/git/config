[user]
	name = "Isaac Mackle"
	email = "isaac.mackle@gmail.com"

[core]
	editor = nvim
	autocrlf = input
	eol = lf

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true
	writeCommitGraph = true

[rebase]
	autoStash = true
	updateRefs = true

[merge]
	conflictStyle = diff3

[diff]
	colorMoved = default

[branch]
	sort = "-committerdate"

[column]
	ui = "auto"

[filter "lfs"]
	clean = "git-lfs clean -- %f"
	process = "git-lfs filter-process"
	required = true
	smudge = "git-lfs smudge -- %f"

[rerere]
	enabled = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	amend = commit --amend --no-edit
	

[includeIf "gitdir:~/dev/"]
	path = ~/.config/git/work_config
