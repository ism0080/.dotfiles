# Homebrew Bundle for WSL
# Core development tools and CLI utilities

brew "zsh"

# Version control and collaboration
brew "git"
brew "gh"              # GitHub CLI

# Shell and terminal
brew "starship"        # Cross-shell prompt
brew "tmux"            # Terminal multiplexer
brew "zoxide"          # Smarter cd command

# Editor and tools
brew "neovim"

# Search and navigation
brew "fzf"             # Fuzzy finder
brew "ripgrep"         # Fast grep alternative
brew "fd"              # Fast find alternative
brew "lsd"             # Modern ls with colors and icons
brew "tree"            # Directory listing
brew "yazi"

# File operations
brew "stow"            # Symlink manager

# Development utilities
brew "jq"              # JSON processor
brew "wget"
brew "curl"
brew "poppler"
brew "ffmpeg"
brew "resvg"

# Language version manager
brew "mise"            # Modern runtime version manager (replaces fnm, nvm, rbenv, pyenv, etc.)

# Code quality
brew "shellcheck"      # Shell script linter

brew "awscli"